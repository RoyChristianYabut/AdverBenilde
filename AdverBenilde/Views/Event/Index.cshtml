@model AdverBenilde.Models.EventsModel
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="col-lg-3">
    <br /><br />
    <div class="well">
        <h3>Advanced Search</h3>
        <hr />
        <div class="list-group">
            <a href="@Url.Action("Index?c=", "Event")" class="list-group-item">All Categories</a>
            @foreach (var item in Model.AllLocations)
            {
                <a href="Index?c=@item.LocationCode"
                   class="list-group-item">
                    <span class="badge">@item.TotalCount</span>
                    @item.Name, @item.CampusName
                </a>
            }
        </div>
    </div>
</div>
<div class="col-lg-9">
    <h1 class="text-center">View Stores</h1>
    <hr />
    @foreach (var item in Model.AllEvents)
    {
        <div class="col-lg-3">
            <a href="@Url.Action("Details", "Events", new { id = item.ID })"
               style="text-decoration:none;">
                <div class="thumbnail">
                    <img src="../Images/Events/@item.Image" alt="@item.Name"
                         class="img-responsive" />
                    <div class="caption">
                        <h3>@item.Name</h3>
                        <small>Description: @item.Description</small>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
<div class="row"></div>