@model AdverBenilde.Models.EventsModel
@{
    ViewBag.Title = "Index";
}

<h2></h2>

<div class="col-lg-3">
    <br /><br />
    <div class="well">
        <h3>Advanced Search</h3>
        <hr />
        <div class="list-group">
            <a href=@Url.Action("Index", "Event") class="list-group-item">All Categories</a>
            <h3 class="list-group-item">Date</h3>
            <a href="Index?c=100000" class="list-group-item">
                <span class="badge"></span>
                Soonest To Latest
            </a>
            <a href="Index?c=100001" class="list-group-item">
                <span class="badge"></span>
                Latest to Soonest
            </a>
            <h3 class="list-group-item">Campus</h3>
            @foreach (var item in Model.AllCampus)
    {
        <a href="Index?c=@item.CampusID" class="list-group-item">
            <span class="badge"></span>
            @item.Name
        </a>
}
        </div>
    </div>
</div>
<div class="col-lg-9">
    <h1 class="text-center">Events</h1>
    <hr />
    @foreach (var item in Model.AllEvents)
    {
        <div class="col-lg-3">
            <a href="@Url.Action("Details", "Event", new { id = item.ID })"
               style="text-decoration:none;">
                <div class="thumbnail">
                    <img src="../Images/Events/@item.Image" alt="@item.Name"
                         class="img-responsive" />
                    <div class="caption">
                        <h3>@item.Name</h3>
                        <small>Location: @item.LocationName</small>
                        <small>Time: @item.Time</small>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
<div class="row"></div>