@model AdverBenilde.Models.EventsModel

@{
    ViewBag.Title = "Details";
}

<div class="col-lg-4">
    <img src="../../Images/Events/@Model.Image" class="img-responsive" />
</div>
<div class="col-lg-8">
    <div class="well clearfix">
        <h2>@Model.Name </h2>
        <hr />
        <small>Location: @Model.LocationName</small><br />
        <small>Time:@Model.Time</small>
        <strong>Description:</strong><br />
        <p>
            @Model.Description
        </p>
        <small>Event Handler: @Model.EventHandlerName</small>
        <small>Status: @Model.Status</small>
        <h4>Is Going @Model.IsGoing.ToString()   Interested @Model.Interested.ToString()   NotGoing @Model.NotGoing.ToString()</h4>

        <small>Date Added: @Model.DateAdded</small>
    </div>
</div>
